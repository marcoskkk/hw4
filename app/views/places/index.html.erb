<h1>Places</h1>

<div class="m-2 mt-4">
  <p>
    <a class="btn btn-outline-primary" href="/places/new">New place</a>
  </p>

  <div class="list-group">
    <% for place in @places %>
      <a href="/places/<%= place.id %>" class="list-group-item list-group-item-action"><%= place.name %></a>
    <% end %>
  </div>
</div>
