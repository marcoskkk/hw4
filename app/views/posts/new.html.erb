<h1>New Post</h1>

<div class="m-2 mt-4">

  <% if @current_user%>
    <%= form_with model: @post do |form| %>
      <div class="mb-3">
        <%= form.label "title" %>
        <%= form.text_field "title" %>
      </div>
      <div class="mb-3">
        <%= form.label "description" %>
        <%= form.text_field "description" %>
      </div>
      <div class="mb-3">
        <%= form.label "posted_on" %>
        <%= form.date_field "posted_on" %>
      </div>
      <div class="mb-3">
        <%= form.label "uploaded_image", class: "form-label" %>
        <%= form.file_field "uploaded_image", accept: "image/png, image/jpeg, image/jpg", class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.submit "Create Post", class: "btn btn-primary"  %>
      </div>
      <%= form.hidden_field "place_id" %>
    <% end %>
  <% else %>
      <p>Login to post</p>
  <% end %>

  </div>


